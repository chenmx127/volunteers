/* pages/affirm/affirm.wxss */
.page_box {
  width: 90%;
  margin: auto;
  overflow: hidden;
}
.aff_top {
  width: 100%;
  height: 400rpx;
}
.aff_upside_box {
  display: flex;
  justify-content: space-between;
}
.aff_upside_left {
  width: 40rpx;
  height: 40rpx;
}
.aff_upside_right {
  width: 40rpx;
  height: 40rpx;
}
.aff_pho {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
}
.aff_pic {
  width: 100rpx;
  height: 100rpx;
}
.aff_pho text{
  font-size: 28rpx;
  color: #ccc;
}
.aff_downside_box {
  display: flex;
  justify-content: space-between;
}
.aff_downside_left {
  width: 40rpx;
  height: 40rpx;
}
.aff_downside_right {
  width: 40rpx;
  height: 40rpx;
}
.aff_content {
  width: 100%;
  height: 150rpx;
  margin-top: 20rpx;
}
.aff_content textarea {
  font-size: 28rpx;
  color:#bbb;
}
.aff_give {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
.aff_give text {
  font-size: 30rpx;
  color: #333;
  text-align: left;
  line-height: 60rpx;
}
.aff_give input {
  display: inline-block;
  text-align: right;
  padding-right: 20rpx;
  width: 450rpx;
}
.aff_give image {
  width: 30rpx;
  height: 30rpx;
}
.aff_list {
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.aff_list image{
  width: 70rpx;
  height: 70rpx;
}
.aff_setor {
  width: 240rpx;
  height: 30rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}
.aff_setor text{
  font-size: 24rpx;
  color: #ccc;
}
.aff_setor image{
  width: 20rpx;
  height: 20rpx;
}
.aff-btn {
  width:600rpx;
  margin: 20rpx auto;
  text-align: center;
  background: linear-gradient(to left,rgb(243, 54, 54),rgb(250, 183, 183));
  border-radius: 50rpx;
}
.aff-btn button{
  font-size: 34rpx;
  font-weight: 400; 
  line-height: 45rpx;
  color: #fff;
  border:none;
}

