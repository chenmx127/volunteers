/* pages/person3/person3.wxss */
page{
  background-color: #eee;
}
.content {
  width: 90%;
  margin: auto;
  overflow: hidden;
}
.act_name {
  width: 90%;
  background-color: #fff;
  border-radius: 20rpx;
  margin:50rpx auto;
  padding: 80rpx 0rpx;
}
.act_name text {
  width: 150rpx;
}
.act_time {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}
.act_time text {
  font-size: 36rpx;
  color: #333;
}
#input_time {
  width: 450rpx;
  height: 60rpx;
  background-color: #ECEEF1;
  border-radius: 8rpx;
}
.act_long_time {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
.act_long_time text {
  font-size: 36rpx;
  color: #333;
}
.input_long_time {
  width: 450rpx;
  height: 60rpx;
  background-color: #ECEEF1;
  border-radius: 8rpx;
}
.act_sex {
  display: flex;
  justify-content: space-between;
  margin: 12px 8px 0px 8px;
  width: 428rpx;
}
.act_sex text {
  font-size: 36rpx;
  color: #333;
}
.act_sex radio{
  transform: scale(0.7);
}
.act_address {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
.act_address text {
  font-size: 36rpx;
  color: #333;
}
.input_address {
  width: 450rpx;
  height: 60rpx;
  border-radius: 8rpx;
  background-color: #ECEEF1;
}
.act_pic {
  width: 90%;
  height: 250rpx;
  background-color: #fff;
  margin: 40rpx auto;
  border-radius: 20rpx;
  padding: 30rpx 0rpx;
}
.act_pho {
  font-size: 36rpx;
  color: #000;
  text-align: center;
  margin: 10rpx auto;
}
.act_xj {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  background-color: #F2F3F4;
  margin-top: 20rpx;
  margin-left: 30rpx;
  display:flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.act_xj image {
  width: 90rpx;
  height: 90rpx;
}
.act_xj text {
  font-size: 30rpx;
  color: #ccc;
  margin-top: -50rpx;
}
/* person1的确认样式 */
.person1-btn {
  width:600rpx;
  margin:75rpx auto;
  text-align: center;
  background-color: #F77079;
  border-radius: 50rpx;
}
.person1-btn button{
  font-size: 38rpx;
  font-weight: 400; 
  line-height: 45rpx;
  border:none;
  color: #fff;
}