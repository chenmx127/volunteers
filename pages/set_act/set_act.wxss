/* pages/set_act/set_act.wxss */
page{
  background-color: #eee;
}
.content {
  width: 90%;
  margin: auto;
  overflow: hidden;
}
.act_name {
  width: 90%;
  height: 550rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin: auto;
  padding: 10rpx;
}
.act_name text {
  width: 150rpx;
}
.act_title {
  width: 230rpx;
  height: 50rpx;
  border-bottom: 1rpx solid #000;
  margin: 30rpx auto 0 auto;
}
.act_time {
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
}
.act_time text {
  font-size: 32rpx;
  color: #333;
}
#input_time {
  width: 450rpx;
  height: 60rpx;
  background-color: #ECEEF1;
  border-radius: 8rpx;
}
.act_long_time {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
.act_long_time text {
  font-size: 32rpx;
  color: #333;
}
.input_long_time {
  width: 450rpx;
  height: 60rpx;
  background-color:#ECEEF1;
  border-radius: 8rpx;
}
.act_sex {
  display: flex;
  justify-content: space-between;
  margin: 30rpx 8rpx 0 20rpx;
}
.act_sex .radio {
  font-size: 30rpx;
  margin-right: 46rpx;
}
.act_sex radio{
  transform: scale(.7);
}
.act_sex text {
  font-size: 32rpx;
  color: #333;
}
.act_person {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
}
.act_person text {
  font-size: 32rpx;
  color: #333;
}
.input_person {
  width: 450rpx;
  height: 60rpx;
  border-radius: 8rpx;
  background-color:#ECEEF1;
}
.act_address {
  display: flex;
  justify-content: space-around;
  margin-top: 30rpx;
  position: relative;
}
.act_address text {
  font-size: 32rpx;
  color: #333;
}
.input_address {
  width: 450rpx;
  height: 60rpx;
  border-radius: 8rpx;
  background-color:#ECEEF1;
}
.act_address image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 5rpx;
  right: 25rpx;
}
.act_intro {
  width: 90%;
  height: 200rpx;
  background-color: #fff;
  margin: 20rpx auto;
  border-radius: 20rpx;
  padding: 10rpx;
}
.act_itdt {
  font-size: 36rpx;
  color: #000;
  text-align: center;
  margin: 10rpx auto;
}
textarea {
  cursor: auto;
  width: 90%;
  height: 150rpx;
  display: block;
  position: relative;
  overflow: hidden;
  margin: auto;
}
.act_pic {
  width: 90%;
  height: 250rpx;
  background-color: #fff;
  margin: 20rpx auto;
  border-radius: 20rpx;
  padding: 10rpx;
}
.act_pho {
  font-size: 36rpx;
  color: #000;
  text-align: center;
  margin: 10rpx auto;
}
.act_xj {
  width: 150rpx;
  height: 150rpx;
  border-radius: 20rpx;
  background-color: #eee;
  margin-top: 20rpx;
  margin-left: 30rpx;
  display:flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.act_xj image {
  width: 90rpx;
  height: 90rpx;
}
.act_xj text {
  font-size: 30rpx;
  color: #ccc;
  margin-top: -50rpx;
}
.aff-btn {
  width:600rpx;
  margin: 20rpx auto;
  text-align: center;
  background: linear-gradient(to left,rgb(243, 54, 54),rgb(250, 183, 183));
  border-radius: 50rpx;
}
.aff-btn button{
  font-size: 34rpx;
  font-weight: 400; 
  line-height: 45rpx;
  color: #fff;
  border:none;
}