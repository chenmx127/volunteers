<!--pages/set_act/set_act.wxml-->
<view class="contrent">
	<block>
		<view class="act_name">
			<view class="act_title"><input class="input_name" placeholder="输入活动名称" placeholder-style="font-size: 38rpx;"></input></view>
			<view class="act_time"><text>活动时间</text><input id="input_time"></input></view>
			<view class="act_long_time"><text>活动时长</text><input class="input_long_time"></input></view>
			<view class="act_sex">
				<text>性别</text>
				<label class="radio">
					<radio value="r1" checked="true" color="#f99" />男
				</label>
				<label class="radio">
					<radio value="r2" color="#f99" />女
				</label>
				<label class="radio">
					<radio value="r3" color="#f99"  />不限
				</label>
			</view>
			<view class="act_person"><text>需求人数</text><input class="input_person"></input></view>
			<view class="act_address"><text>地址</text><input class="input_address"></input></view>
		</view>
		<view class="act_intro">
			<view class="act_itdt">活动介绍</view>
			<textarea placeholder="请输入活动内容" auto-focus placeholder-style="font-size: 30rpx;" />
			</view>
    <view class="act_pic">
      <view class="act_pho">活动图片</view>
      <view class="act_xj">
      <image src="../../img/xiangji.png"></image>
      <text>活动图片</text>
      </view>
    </view>
	</block>
</view>