/* pages/index1/index1.wxss */
page{
  background-color: #F4F6FA;
}
.page-body {
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}
.banner-img{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.sort-con{
  width: 100%;
  height: 200rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.sort-b{
  margin-top: 50rpx;
  display: inline-block;
  font-size: 28rpx;
}
.sort-b:nth-child(2){
  margin-left: 100rpx;
  margin-right: 100rpx;
}
.sort-img{
  width: 100rpx;
  height: 100rpx;
}
.sort-text{
  display: block;
}
.content{
  width: 660rpx;
  margin: auto;
  margin-bottom: 40rpx;
}
.con-text{
  font-size: 32rpx;
}
.title{
  overflow: hidden;
  margin-bottom: 40rpx;
}
img{
  vertical-align: top;
}
.title-img{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 10rpx;
}
.most{
  margin-top: 20rpx;
  float: right;
  font-size: 28rpx;
  color: #999999;
}
.act-box{
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  overflow: hidden;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.act-img{
  width: 160rpx;
  height: 160rpx;
  background-color: #f00;
  border-radius: 20rpx;
  float: left;
}
.act-right{
  float: left;
  margin-left: 30rpx;
}
.act-right text{
  display: block;
}
.act-title{
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
}
.act-address,.act-hour,.act-person{
  color: #6E6E6E;
  font-size: 28rpx;
}
.act-address{
  margin-top: 8rpx;
}
.act-seen{
    position: absolute;
    bottom:30rpx;
    right: 30rpx;
    font-size: 30rpx;
    color: #f00;
    border: 2rpx solid #f00;
    padding: 6rpx 30rpx;
    border-radius: 50rpx;
}

