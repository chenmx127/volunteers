/* pages/call/call.wxss */
page{
  background-color: #F4F6FA;
}
.zixun {
  width: 660rpx;
  height: 450rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: -5rpx 5rpx 5rpx #ccf;
  margin: auto;
  font-size: 28rpx;
  padding: 50rpx;
  box-sizing: border-box;
  margin-top: 50rpx;
}
.zixun-top{
  position: relative;
}
.zixun image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50rpx;
}
.top-tit{
  position: absolute;
  top: 20rpx;
  left: 160rpx;
  font-size: 36rpx;
  color: #333;
}
.top-span{
  position: absolute;
  top: 70rpx;
  left: 160rpx;
  color: #999;
}
.zixun-bom{
  margin-top: 20rpx;
}
.zixun-con{
  color: #666;
  font-size: 30rpx;
}
.zi-time{
  color: #999;
  display: block;
  margin-top: 10rpx;
}
.dianji {
  margin-top: 20rpx;
  width: 100%;
  height: 70rpx;
  text-align: center;
}
.dianji image{
  width: 250rpx;
  height: 100%;
}