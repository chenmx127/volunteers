/* pages/index1/index1.wxss */
page{
  background-color: #F4F6FA;
}
.page-body {
  width: 100%;
  height: 350rpx;
  overflow: hidden;
}
.banner-img{
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.sort-con{
  width: 100%;
  height: 200rpx;
  text-align: center;
  margin-bottom: 40rpx;
}
.sort-b{
  margin-top: 50rpx;
  display: inline-block;
  font-size: 28rpx;
}
.sort-b:nth-child(2){
  margin-left: 100rpx;
  margin-right: 100rpx;
}
.sort-img{
  width: 100rpx;
  height: 100rpx;
}
.sort-text{
  display: block;
}
.content{
  width: 660rpx;
  margin: auto;
  margin-bottom: 40rpx;
}
.con-text{
  font-size: 32rpx;
}
.title{
  overflow: hidden;
  margin-bottom: 40rpx;
}
img{
  vertical-align: top;
}
.title-img{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 10rpx;
}
.most{
  margin-top: 20rpx;
  float: right;
  font-size: 28rpx;
  color: #999999;
}


