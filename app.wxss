/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.act-box{
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  overflow: hidden;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.act-img{
  width: 160rpx;
  height: 160rpx;
  background-color: #f00;
  border-radius: 20rpx;
  float: left;
}
.act-right{
  float: left;
  margin-left: 30rpx;
}
.act-right text{
  display: block;
}
.act-title{
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
}
.act-address,.act-hour,.act-person{
  color: #6E6E6E;
  font-size: 28rpx;
}
.act-address{
  margin-top: 8rpx;
}
.act-seen{
    position: absolute;
    bottom:30rpx;
    right: 30rpx;
    font-size: 30rpx;
    color: #f00;
    border: 2rpx solid #f00;
    padding: 6rpx 30rpx;
    border-radius: 50rpx;
}
