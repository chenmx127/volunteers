/**app.wxss**/
.act_box {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin: auto;
}
.act_img {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: 10rpx;
}
.item_box {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
}
.item_active {
  width: 500rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.jion {
  font-size: 40rpx;
  color: #f99;
  font-weight: 700rpx;
}
.after {
  font-size: 40rpx;
  color: #000;
  font-weight: 700rpx;
}
.line {
  width: 700rpx;
  height: 10rpx;
  margin: auto;
  border-radius: 10rpx;
  background: linear-gradient(to right,#f99,#fff);
  margin-top: 30rpx;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.act-box{
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-top: 20rpx;
  overflow: hidden;
  padding: 30rpx;
  box-sizing: border-box;
  position: relative;
}
.act-img{
  width: 160rpx;
  height: 160rpx;
  background-color: #f00;
  border-radius: 20rpx;
  float: left;
}
.act-right{
  width: 450rpx;
  float: left;
  margin-left: 30rpx;
  overflow: hidden;
}
.act-right text{
  display: block;
}
.act-title{
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
}
.act-address,.act-hour,.act-person{
  color: #6E6E6E;
  font-size: 28rpx;
}
.act-address{
  margin-top: 8rpx;
}
.act-seen{
    position: absolute;
    bottom:30rpx;
    right: 30rpx;
    font-size: 30rpx;
    color: #f00;
    border: 2rpx solid #f00;
    padding: 6rpx 30rpx;
    border-radius: 50rpx;
}
